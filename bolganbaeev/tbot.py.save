import telebot
import sqlite3

bot = telebot.TeleBot('7105666030:AAE-YdgolF4eifV1GH-T1m-PEBC1-PlacvE')
name = None

@bot.message_handler(commands=['start'])
def start(message):
    conn = sqlite3.connect('solo.sql')
    cur = conn.cursor()
    
    cur.execute('CREATE TABLE IF NOT EXISTS  users (int auto_increament  primary key, name varchar(50), pass varchar(50))')
    conn.commit()
    cur.close()
    conn.close()
    
    bot.send_message(message.chat.id, 'write the name')
    bot.register_next_step_handler(message, user_name)
    
def user_name(message):
    global name
    name = message.text.strip()
    
    bot.send_message(message.chat.id, 'write the password')
    bot.register_next_step_handler(message, user_pass)
        
def user_pass(message):
    password = message.text.strip()
    
    conn = sqlite3.connect('solo.sql')
    cur = conn.cursor()
    
    cur.execute(f"INSERT INTO users (name, pass) VALUES ('%s', '%s')" % (name, password))
    conn.commit()
    cur.close()
    conn.close()
    bot.send_message(message.chat.id, 'You are registered')
        
@bot.message_handler(commands=['info'])
def details(message):
    conn = sqlite3.connect('solo.sql')
    cur = conn.cursor()
    
    cur.execute('SELECT * FROM users')
    users = cur.fetchall()
    info = ''
    for el in users:
        info += f'Name: {el[1]} \nPassword: {el[2]} \n\n'
        
    cur.close()
    conn.close()

    bot.send_message(message.chat.id, info)
    
bot.polling(none_stop=True)


